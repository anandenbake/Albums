
<p>
  <strong>Name:</strong>
  <%= @album.name %>
</p>
 
<p>
  <strong>Description:</strong>
  <%= @album.description %>
</p>

<%= link_to 'Edit', edit_album_path(@album) %>
<%= link_to 'Back', albums_path %><br><br>
<%= link_to 'Add Image', new_album_photo_path(@album) %>
<%@album.photos.each do |photo| %>
	<%photo.avatars.each do |image|%>
	<%=image_tag(image.url)%>
	<%= link_to 'Destroy', album_photo_url(@album,photo),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
	<%end%>

<%end%>

